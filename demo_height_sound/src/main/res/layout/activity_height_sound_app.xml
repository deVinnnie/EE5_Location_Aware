<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".height_sound_app"
    android:visibility="visible"
    android:id="@+id/myBackground"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXIT_APP"
        android:id="@+id/button"
        android:textStyle="normal|bold|italic"
        android:textSize="30sp"
        android:background="#ffff0000"
        android:onClick="STOP"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START_APP"
        android:id="@+id/button2"
        android:textSize="30sp"
        android:textStyle="normal|bold|italic"
        android:background="#ff00ff00"
        android:onClick="START"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:id="@+id/textView3"
        android:hint="Height"
        android:textSize="30dp"
        android:editable="true"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height: "
        android:id="@+id/textView5"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:id="@+id/textView6"
        android:textSize="25sp"
        android:editable="true"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="25sp"
        android:text="Reference Height:"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="refresh reference"
        android:id="@+id/button3"
        android:background="#ffffff00"
        android:textSize="20dp"
        android:onClick="get_reference"
        android:layout_above="@+id/button"
        android:layout_toStartOf="@+id/button2"
        android:layout_marginBottom="62dp" />

</RelativeLayout>
