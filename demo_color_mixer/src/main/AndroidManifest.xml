<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ee5.demo_color_mixer" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ColorSelectActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayColorActivity"
            android:label="@string/title_activity_display_color"
            android:screenOrientation="portrait"
        android:parentActivityName=".ColorSelectActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ee5.demo_color_mixer.ColorSelectActivity" />
        </activity>
        <activity
            android:name="com.EE5.image_manipulation.ImageManipulationsActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="com.EE5.image_manipulation.ImageManipulationsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
